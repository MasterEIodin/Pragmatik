import java.util.Scanner;

public class Task4 {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.println("Please, enter the array's size:");

        int size = scanner.nextInt();
        int middle = (int) Math.floor(size/2);
        int[] array = new int[size];
        int counter = 0;

        for (int i = 0; i < size; i++) {
            System.out.println("Please, enter the array's next element:");
            int number = scanner.nextInt();
            array[i] = number;
        }
        for (int i = 0; i <middle ; i++) {
            if (array[i] == array[(array.length - 1) - i]) {
                counter++;
            }
        }

        if (counter == middle) {
            System.out.println("Array is mirrored!");
        }else {
            System.out.println("Array is not mirrored!");
        }
    }
}

