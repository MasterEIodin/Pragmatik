
        import java.util.Arrays;
        import java.util.Scanner;

public class Task2 {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.println("Please, enter the array's size. The number must be even:");

        int n = scanner.nextInt();
        while (n % 2 != 0) {
            System.out.println("Invalid array size. Please, enter an even number!");
            n = scanner.nextInt();
        }
            int[] array = new int[n];
            for (int i = 0; i <n/2 ; i++) {
                System.out.println("Please, enter the array's next element:");
                int number = scanner.nextInt();
                array[i] = array[(n/2) + i] = number;
            }
            System.out.println(Arrays.toString(array));
        }
    }




