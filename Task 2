import java.sql.SQLOutput;
        import java.util.Arrays;
        import java.util.Scanner;

public class Task3 {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        System.out.println("Please, enter the array's size. The number must be even:");
        int n = scanner.nextInt();
        if (n%2 != 0) {
            System.out.println("Invalid array size. Please, try again entering an even number!");
        }else {

            int[] array = new int[n];
            for (int i = 0; i <n/2 ; i++) {
                System.out.println("Please, enter the array's next element:");
                int number = scanner.nextInt();
                array[i] = array[(n/2) + i] = number;
                
            }
            
            System.out.println(Arrays.toString(array));
            
        }
    }
}


